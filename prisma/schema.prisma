// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Ticket {
  id          String   @id @default(uuid())
  name        String
  email       String
  subject     String
  description String
  website     String
  createdAt   DateTime @default(now())
  status      String   @default("OPEN")
  rating      Int?
  urgency     Int      @default(3)
  feedback    String?
  note        String?
  issueType   String   @default("GENERAL") // GENERAL or WEBSITE
}

model AdminUser {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  resetTokens  AdminResetToken[]
}

model AdminResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  admin     AdminUser @relation(fields: [adminId], references: [id])
  adminId   String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model CustomerLoginToken {
  id        String   @id @default(uuid())
  email     String
  code      String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}
